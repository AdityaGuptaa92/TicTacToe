<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#edf6f9"
    android:padding="5dp">

    <TextView
        android:id="@+id/msg_to_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:fontFamily="@font/roboto_mono"
        android:gravity="center"
        android:text="@string/message_to_user"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/developers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Developers"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@id/msg_to_user"
        app:layout_constraintStart_toStartOf="@id/msg_to_user"
        app:layout_constraintTop_toBottomOf="@id/msg_to_user" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/developers"
        app:layout_constraintStart_toStartOf="@id/developers"
        app:layout_constraintTop_toBottomOf="@id/developers" />

    <TextView
        android:id="@+id/tv_aditya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Aditya Kr. Gupta"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@id/divider_1"
        app:layout_constraintStart_toStartOf="@id/divider_1"
        app:layout_constraintTop_toBottomOf="@id/divider_1" />

    <View
        android:id="@+id/divider_2"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/tv_aditya"
        app:layout_constraintStart_toStartOf="@id/tv_aditya"
        app:layout_constraintTop_toBottomOf="@id/tv_aditya" />

    <TextView
        android:id="@+id/tv_jatin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Jatin Garg"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@id/divider_2"
        app:layout_constraintStart_toStartOf="@id/divider_2"
        app:layout_constraintTop_toBottomOf="@id/divider_2" />

    <TextView
        android:id="@+id/contact_us_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Contact us on"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@id/tv_jatin"
        app:layout_constraintStart_toStartOf="@id/tv_jatin"
        app:layout_constraintTop_toBottomOf="@id/tv_jatin" />

    <View
        android:id="@+id/divider_3"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/contact_us_on"
        app:layout_constraintStart_toStartOf="@id/contact_us_on"
        app:layout_constraintTop_toBottomOf="@id/contact_us_on" />

    <ImageView
        android:id="@+id/mail_link"
        android:layout_width="68dp"
        android:layout_height="64dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/ic_mail70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/github_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_3"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/github_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="76dp"
        android:src="@drawable/ic_github70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linked_link"
        app:layout_constraintStart_toEndOf="@id/mail_link"
        app:layout_constraintTop_toBottomOf="@id/divider_3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/linked_link"
        android:layout_width="54dp"
        android:layout_height="52dp"
        android:layout_marginBottom="85dp"
        android:src="@drawable/ic_linkedin70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/github_link" />

    <Button
        android:id="@+id/close_contactus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_popup_button"
        android:text="Close"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/github_link"
        app:layout_constraintVertical_bias="0.058" />


</androidx.constraintlayout.widget.ConstraintLayout>